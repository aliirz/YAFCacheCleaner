<Window x:Class="YAFCacheCleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="YAF Cache Cleaner" Height="251" Width="321" Background="#FF363636">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="2" HorizontalAlignment="Center" Content="Clear Cache" Height="55"  Name="button1"  Width="126" Click="button1_Click" />
        <Label Grid.Row="0" HorizontalAlignment="Center" Content="The cache will be cleared automatically after 4 hours." Height="33"  Name="label1"   Foreground="White" />
        <Label Grid.Row="1" HorizontalAlignment="Center" Content="Click the button to clear it manually." Foreground="White" Height="33"  Name="label2"  />
    </Grid>
</Window>
